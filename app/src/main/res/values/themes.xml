<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyShop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryVariant">@color/accent_color_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="actionOverflowButtonStyle">@style/button</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="navigationIcon">@drawable/back_arrow</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="button" parent="android:Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/menu_icon</item>
    </style>
    <style name="myStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="actionOverflowButtonStyle">@style/button</item>
    </style>

</resources>